extends base

block content
    main.main
        if(currentUser.role === 'admin')
            table(style="margin: 0 auto;")
                tr
                    td(style="text-align: center; padding-right: 20px;")
                        h2 Total:
                    td(style="text-align: right; font-weight: bold;")
                        h1=`${users.length}`
                    td(style="padding-left: 10px;")
                        h2 Mitarbeiter
                tr
                    td(style="text-align: center; padding-right: 20px;")
                        h2 Total:
                    td(style="text-align: right; font-weight: bold;")
                        h1=`${machinery.length}`
                    td(style="padding-left: 10px;")
                        h2 Maschinen
        .card-container
            script.
                console.log("Hello World- Overview");

            each department in departments
                a.card(href=`/api/v1/departments/${department.slug}`, style="text-decoration: none; color: #7c7875;")
                    .card__header
                        .card__picture
                            card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/departments/departments-cover/${department.imageCover}`, alt=`${department.name}`)
                        h3.heading-tertirary
                            span= department.name

                    .card__details
                        h4.card__sub-heading= `${department.employeesCount}-Mann starke Truppe`
                        p.card__text= department.summary_de
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-map-pin')
                            span= department.location
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-user')
                            span= `${department.employeesCount} employees`
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-machine')
                            span= `${department.machineryCount} machinery`


