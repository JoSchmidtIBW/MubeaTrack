extends base


block content
    h1 This is the department overview
    // extends index.pug oder layout
    main.main
        .card-container

            each department in departments
                .card
                    .card__header
                        .card__picture
                            card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/departments/${department.imageCover}`, alt=`${department.name}`)
                        h3.heading-tertirary
                            span= department.name

                    .card__details
                        h4.card__sub-heading= `${department.employeesCount}-Mann starke Truppe`
                        p.card__text= department.summary
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-map-pin')
                            span= department.location
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-user')
                            span= `${department.employeesCount} employees`
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-machine')
                            span= `${department.machinesCount} machines`

                    .card__footer
                        p
